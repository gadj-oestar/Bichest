{% extends 'base.html.twig' %}

{% block title %}Vendre des Cryptomonnaies{% endblock %}

{% block body %}
<h1>Vendre des Cryptomonnaies</h1>

<form action="{{ path('app_sell_crypto') }}" method="POST">
    <div>
        <label for="crypto_id">Sélectionnez une cryptomonnaie :</label>
        <select name="crypto_id" id="crypto_id" onchange="updatePrice()">
            {% for crypto in cryptos %}
                <option value="{{ crypto.id }}">{{ crypto.name }} ({{ crypto.symbol }})</option>
            {% endfor %}
        </select>
    </div>

    <div>
        <label for="amount">Quantité :</label>
        <input type="number" name="amount" id="amount" step="0.01" required>
    </div>

    <button type="submit">Vendre</button>
</form>
{% endblock %}

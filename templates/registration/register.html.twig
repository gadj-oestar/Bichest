{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="main-container">
        <!-- Group 7 -->
        <div class="group-7">
            
            <!-- Rectangle 1 -->
            <div class="rectangle-1">
            
            <!-- Titre -->
            <div class="title">
                Welcome to BICHEST
            </div>

            <!-- Symfony Form Start -->
            {{ form_start(registrationForm) }}

            <!-- Label Email -->
            <div class="label username-label">
               Email
            </div>

            <!-- Rectangle 2 (Email Input) -->
            <div class="input-field email-input">
                {{ form_row(registrationForm.email, { label: false }) }}
            </div>

            <!-- Label Password -->
            <div class="label password-label">
                Password
            </div>

            <!-- Rectangle 3 (Password Input) -->
            <div class="input-field password-input">
                {{ form_row(registrationForm.plainPassword, { label: false }) }}
            </div>

            <!-- Rectangle 4 (Agree Terms) -->
            <div class="register-button-container">
                {{ form_row(registrationForm.agreeTerms, { label: 'Agree to terms and conditions', label_attr: { class: 'agree-terms-label' } }) }}
            </div>

            <!-- Bouton Register -->
            <div class="register-button">
                <button type="submit" class="btn">Register</button>
            </div>

            <!-- Symfony Form End -->
            {{ form_end(registrationForm) }}
            
            </div>
        </div>
    </div>
{% endblock %}
